#include<iostream>
using namespace std;
int main()
{
	int n;
	cin>>n;
	int mid;
	if(n%2==0)
	 mid=n/2;
	else
	 mid=n/2+1;
	for(int i=1;i<=mid;i++)
	{
		for(int j=1;j<i;j++){
			cout<<" ";
		}
		for(int k=1;k<=i;k++){
			cout<<"*"<<" ";
		}
		cout<<endl;
	}
		for(int i=mid+1;i<=n;i++)
	{
		for(int j=i;j<n;j++){
			cout<<" ";
		}
		for(int k=0;k<=n-i;k++){
			cout<<"*"<<" ";
		}
		cout<<endl;
	}
}
